@model IEnumerable<Model.ReporteServicioModel>

@{
    ViewBag.Title = "Cuentas ";
}

<h2>Servicios</h2>
<br />
@using (Html.BeginForm("Cuentas", "Reportes", FormMethod.Get, new { id = "form-solicitud" }))

{
    <div>
        @Html.DropDownList("servicios", null, htmlAttributes: new { @class = "form-control Select2", id = "selectServicios", name = "servicios", style = "width:250px;", @multiple = true })
    </div>
    <br />
    <button type="submit" class="btn btn-primary" title="Solicitar">
        <span class="glyphicon glyphicon-send"></span>
    </button>
}

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.exp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.area)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.exp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.area)
            </td>
        </tr>
    }
</table>
<br />
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="~/Reportes/Index" title="Reportes" class="btn btn-secondary">
            <i class="glyphicon glyphicon-arrow-left"></i>
        </a>
    </div>
</div>
<script type="text/javascript">
         $(document).ready(function ()
    {
                    jQuery(function ($) {
                        $('.table').DataTable();
                    });

           $('.Select2').select2({
               placeholder: "Seleccione los servicios"
           });
    });
</script>

