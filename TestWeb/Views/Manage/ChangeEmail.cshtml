@model TestWeb.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "Cambiar correo";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Formulario para cambiar el correo</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="container-fluid">
            <div class="form-row">
                <div class="col-auto">
                    <button type="submit" title="Cambiar" class="btn btn-primary">
                        <span class="glyphicon glyphicon-send"></span>
                    </button>
                </div>
                <div class="col-auto">
                    <a href="~/Manage/" title="Volver" class="btn btn-secondary">
                        <i class="glyphicon glyphicon-arrow-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}