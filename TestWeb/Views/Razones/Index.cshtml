@model IEnumerable<Model.Entities.Razones>

@{
    ViewBag.Title = "Razones";
}

<h2>Razones</h2>
    <a href="~/Razones/Create/" title="Añadir" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>
    </a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @if (item.activo)
                    {
                        <label>Si</label>
                    }
                    else
                    {
                        <label>No</label>
                    }
                </td>
                <td>
                    <a href="~/Razones/Edit/@item.id" title="Editar" class="btn btn-secondary">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    @if (item.activo)
                    {
                        <a href="~/Razones/Delete/@item.id" title="Desactivar" class="btn btn-danger">
                            <i class="glyphicon glyphicon-minus"></i>
                        </a>
                    }
                    else
                    {
                        <a href="~/Razones/Activar/@item.id" title="Activar" class="btn btn-success">
                            <i class="glyphicon glyphicon-plus"></i>
                        </a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<a href="~/Administracion/" title="Administración" class="btn btn-secondary">
    <i class="glyphicon glyphicon-arrow-left"></i>
</a>
<script type="text/javascript">
    jQuery(function ($) {
        $('.table').DataTable();
    });
</script>
