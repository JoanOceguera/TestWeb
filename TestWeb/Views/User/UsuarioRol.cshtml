@using TestWeb.Models
@model ChangeRolViewModel
@{
    ViewBag.Title = "Asignar Rol a Usuarios";
}

<h2>@ViewBag.Title</h2>



@using (Html.BeginForm("UsuarioRol", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="form-group">
        @Html.LabelFor(m => m.UserId, new { @class = "col-md-4 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserId, new { @class = "col-md-4 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Rol", null, htmlAttributes: new { @class = "form-control", @id = "selectRol" })
        </div>
    </div>
    <div class="form-group">
        <div class="container-fluid">
            <div class="form-row">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary" title="Asignar">
                        <span class="glyphicon glyphicon-send"></span>
                    </button>
                </div>
                <div class="col-auto">
                    <a href="~/User/" title="Usuarios" class="btn btn-secondary">
                        <i class="glyphicon glyphicon-arrow-left" title="Usuarios"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval/js")
}
