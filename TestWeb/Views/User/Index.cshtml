@using TestWeb.Models
@{
    ViewBag.Title = "Usuarios";
}
<br />
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header text-center font-weight-bold">
                Usuarios
            </div>
            <div class="card-body">
                <p>Sección que permite consultar los usuarios registrados en la aplicación</p>
                <div class="container">
                    <div class="row justify-content-md-center">
                        <div class="col-auto">
                            @Html.ActionLink("Usuarios", "Usuarios", "User", null, new { @class = "btn btn-primary btn-lg", @role = "button" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header text-center font-weight-bold">
                Roles
            </div>
            <div class="card-body">
                <p>Sección que permite consultar los roles existentes en la aplicación</p>
                <div class="container">
                    <div class="row justify-content-md-center">
                        <div class="col-auto">
                            @Html.ActionLink("Roles", "Roles", "User", null, new { @class = "btn btn-primary btn-lg", @role = "button" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header text-center font-weight-bold">
                Añadir Rol
            </div>
            <div class="card-body">
                <p>Sección que permite añadir un rol a determinado usuario</p>
                <div class="container">
                    <div class="row justify-content-md-center">
                        <div class="col-auto">
                            @Html.ActionLink("Asignar Roles", "UsuarioRol", "User", null, new { @class = "btn btn-primary btn-lg", @role = "button" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>           
</div>
<br />
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="~/Home/" title="Inicio" class="btn btn-secondary">
            <i class="glyphicon glyphicon-arrow-left"></i>
        </a>
    </div>
</div>



 

