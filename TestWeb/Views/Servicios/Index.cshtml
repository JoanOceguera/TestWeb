@model IEnumerable<Model.Entities.Servicios>

@{
    ViewBag.Title = "Servicios";
}
<h2>Servicios</h2>
<a href="~/Servicios/Create/" title="Añadir" class="btn btn-primary">
    <i class="glyphicon glyphicon-plus"></i>
</a>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.activo)
            </th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @if (item.activo)
                    {
                        <label>Si</label>
                    }
                    else
                    {
                        <label>No</label>
                    }
                </td>
                <td>
                    <a href="~/Servicios/Edit/@item.id" title="Editar" class="btn btn-secondary">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    @if (item.activo)
                    {
                        <a href="~/Servicios/Delete/@item.id" title="Desactivar" class="btn btn-danger">
                            <i class="glyphicon glyphicon-minus"></i>
                        </a>
                    }
                    else
                    {
                        <a href="~/Servicios/Activar/@item.id" title="Activar" class="btn btn-success">
                            <i class="glyphicon glyphicon-plus"></i>
                        </a>
                    }

                </td>
            </tr>
        }
    
    </tbody>
</table>
<div class="col-auto">
    <a href="~/Administracion/" title="Administración" class="btn btn-secondary">
        <i class="glyphicon glyphicon-arrow-left"></i>
    </a>
</div>
<script type="text/javascript">
    jQuery(function ($) {
        $('.table').DataTable();
    });
</script>
